<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/key_x"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/key_bk"
            android:textColor="@color/white"
            android:textSize="@dimen/key_text_size"
            android:text="@string/key_x"/>

        <TextView
            android:id="@+id/key_y"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/key_bk"
            android:textColor="@color/white"
            android:textSize="@dimen/key_text_size"
            android:text="@string/key_y"/>
        
        <TextView
            android:id="@+id/key_z"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/key_bk"
            android:textColor="@color/white"
            android:textSize="@dimen/key_text_size"
            android:text="@string/key_z"/>
        
        <TextView
            android:id="@+id/key_t"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/key_bk"
            android:textColor="@color/white"
            android:textSize="@dimen/key_text_size"
            android:text="@string/key_t"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/key_sin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/key_bk"
            android:textColor="@color/white"
            android:textSize="@dimen/key_text_size"
            android:text="@string/key_sin"/>

        <TextView
            android:id="@+id/key_cos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/key_bk"
            android:textColor="@color/white"
            android:textSize="@dimen/key_text_size"
            android:text="@string/key_cos"/>
        
        <TextView
            android:id="@+id/key_log"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/key_bk"
            android:textColor="@color/white"
            android:textSize="@dimen/key_text_size"
            android:text="@string/key_log"/>
        
        <TextView
            android:id="@+id/key_exp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/key_bk"
            android:textColor="@color/white"
            android:textSize="@dimen/key_text_size"
            android:text="@string/key_exp"/>
        
    </LinearLayout>
    
</LinearLayout>
